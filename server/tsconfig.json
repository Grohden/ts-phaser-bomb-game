    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "inlineSourceMap": true,
        "strict": true,
        "outDir": "./build/",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "lib": ["esnext"],
        "typeRoots": [
            "../*.d.ts"
        ]
    },
    "include": ["src/**/*"]
}